{
  "name": "Legal Compliance Dev",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; cd frontend-react && npm install; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": {
    "api": "uvicorn backend.main:app --host 0.0.0.0 --port 8000 --reload",
    "frontend": "cd frontend-react && npm run dev"
  },
  "portsAttributes": {
    "8000": {
      "label": "API",
      "onAutoForward": "silent"
    },
    "5173": {
      "label": "Frontend",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8000,
    5173
  ]
}
